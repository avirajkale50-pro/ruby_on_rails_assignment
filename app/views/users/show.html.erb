<h1><%= @user.email %></h1>

<%= link_to "Edit", edit_user_path(@user), class: "btn" %>
<%= link_to "Back to Users", users_path, class: "btn" %>

<h2>Recent Blogs</h2>
<% @user.blogs.published.limit(5).each do |blog| %>
  <div class="blog-preview">
    <h3><%= link_to blog.title, blog %></h3>
    <span class="date"><%= time_ago_in_words(blog.created_at) %> ago</span>
  </div>
<% end %>
